{
  "name": "@arcfoundry/forge-b-d-platform",
  "version": "0.1.0",
  "description": "FORGE B-D Platform - Contract-driven AI code generation with enterprise compliance",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage .nyc_output",
    "prebuild": "npm run clean",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "slop:check": "node scripts/slop-detector.js",
    "verify": "npm run typecheck && npm run lint && npm run test:coverage && npm run slop:check",
    "verify:quick": "npm run typecheck && npm run lint",
    "precommit": "npm run verify:quick",
    "prepush": "npm run verify",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:deps": "npx depcheck",
    "docs:generate": "typedoc --out docs/api src/index.ts",
    "contracts:validate": "node scripts/validate-contracts.js",
    "compliance:check": "node scripts/compliance-checker.js"
  },
  "keywords": [
    "forge",
    "arcfoundry",
    "code-generation",
    "ai",
    "contracts",
    "enterprise",
    "defense"
  ],
  "author": "ArcFoundry",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^10.4.5",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3",
    "typedoc": "^0.26.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "junit.xml"
  }
}
