{
  "name": "@forge/e2e",
  "version": "1.0.0",
  "description": "FORGE Platform E2E, Load, and Security Tests",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:api": "playwright test --project=api",
    "test:security": "playwright test --project=security",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:report": "playwright show-report reports/html",
    "load": "k6 run load/k6-load-test.js",
    "load:smoke": "k6 run --vus 1 --duration 30s load/k6-load-test.js",
    "load:stress": "k6 run -e SCENARIO=stress load/k6-load-test.js",
    "load:soak": "k6 run -e SCENARIO=soak load/k6-load-test.js",
    "benchmark": "tsx benchmarks/convergence-benchmark.ts",
    "security:zap": "docker run -t owasp/zap2docker-stable zap-baseline.py -t $API_URL",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf test-results reports playwright/.auth"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
