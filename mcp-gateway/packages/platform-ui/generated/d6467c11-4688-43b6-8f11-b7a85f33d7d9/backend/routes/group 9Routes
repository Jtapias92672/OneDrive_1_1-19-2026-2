import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Group 9Controller } from '../controllers/group 9.controller';
import { Group 9Service } from '../services/group 9.service';

export function createGroup 9Routes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Group 9Service(prisma);
  const controller = new Group 9Controller(service);

  router.get('/group 9s', controller.getAll.bind(controller));
  router.get('/group 9s/:id', controller.getById.bind(controller));
  router.post('/group 9s', controller.create.bind(controller));
  router.put('/group 9s/:id', controller.update.bind(controller));
  router.delete('/group 9s/:id', controller.delete.bind(controller));

  return router;
}

export default createGroup 9Routes;
