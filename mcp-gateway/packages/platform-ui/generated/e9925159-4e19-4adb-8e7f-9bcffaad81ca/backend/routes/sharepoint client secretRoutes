import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { SharePoint Client SecretController } from '../controllers/sharepoint client secret.controller';
import { SharePoint Client SecretService } from '../services/sharepoint client secret.service';

export function createSharePoint Client SecretRoutes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new SharePoint Client SecretService(prisma);
  const controller = new SharePoint Client SecretController(service);

  router.get('/share-point client secrets', controller.getAll.bind(controller));
  router.get('/share-point client secrets/:id', controller.getById.bind(controller));
  router.post('/share-point client secrets', controller.create.bind(controller));
  router.put('/share-point client secrets/:id', controller.update.bind(controller));
  router.delete('/share-point client secrets/:id', controller.delete.bind(controller));

  return router;
}

export default createSharePoint Client SecretRoutes;
