import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { PasswordController } from '../controllers/password.controller';
import { PasswordService } from '../services/password.service';

export function createPasswordRoutes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new PasswordService(prisma);
  const controller = new PasswordController(service);

  router.get('/passwords', controller.getAll.bind(controller));
  router.get('/passwords/:id', controller.getById.bind(controller));
  router.post('/passwords', controller.create.bind(controller));
  router.put('/passwords/:id', controller.update.bind(controller));
  router.delete('/passwords/:id', controller.delete.bind(controller));

  return router;
}

export default createPasswordRoutes;
