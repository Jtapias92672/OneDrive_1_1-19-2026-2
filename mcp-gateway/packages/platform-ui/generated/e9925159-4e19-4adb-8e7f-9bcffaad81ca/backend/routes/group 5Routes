import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Group 5Controller } from '../controllers/group 5.controller';
import { Group 5Service } from '../services/group 5.service';

export function createGroup 5Routes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Group 5Service(prisma);
  const controller = new Group 5Controller(service);

  router.get('/group 5s', controller.getAll.bind(controller));
  router.get('/group 5s/:id', controller.getById.bind(controller));
  router.post('/group 5s', controller.create.bind(controller));
  router.put('/group 5s/:id', controller.update.bind(controller));
  router.delete('/group 5s/:id', controller.delete.bind(controller));

  return router;
}

export default createGroup 5Routes;
