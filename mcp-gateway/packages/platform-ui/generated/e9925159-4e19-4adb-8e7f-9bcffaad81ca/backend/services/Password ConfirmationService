import { PrismaClient, Password Confirmation } from '@prisma/client';

export class Password ConfirmationService {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Password Confirmation[]> {
    return this.prisma.password confirmation.findMany();
  }

  async findById(id: string): Promise<Password Confirmation | null> {
    return this.prisma.password confirmation.findUnique({ where: { id } });
  }

  async create(data: Omit<Password Confirmation, 'id' | 'createdAt' | 'updatedAt'>): Promise<Password Confirmation> {
    return this.prisma.password confirmation.create({ data });
  }

  async update(id: string, data: Partial<Password Confirmation>): Promise<Password Confirmation> {
    return this.prisma.password confirmation.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.password confirmation.delete({ where: { id } });
  }
}

export default Password ConfirmationService;
