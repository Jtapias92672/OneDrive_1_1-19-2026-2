import { PrismaClient, SharePoint Client Secret } from '@prisma/client';

export class SharePoint Client SecretService {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<SharePoint Client Secret[]> {
    return this.prisma.sharepoint client secret.findMany();
  }

  async findById(id: string): Promise<SharePoint Client Secret | null> {
    return this.prisma.sharepoint client secret.findUnique({ where: { id } });
  }

  async create(data: Omit<SharePoint Client Secret, 'id' | 'createdAt' | 'updatedAt'>): Promise<SharePoint Client Secret> {
    return this.prisma.sharepoint client secret.create({ data });
  }

  async update(id: string, data: Partial<SharePoint Client Secret>): Promise<SharePoint Client Secret> {
    return this.prisma.sharepoint client secret.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.sharepoint client secret.delete({ where: { id } });
  }
}

export default SharePoint Client SecretService;
