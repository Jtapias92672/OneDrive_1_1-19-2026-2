import { PrismaClient, Password } from '@prisma/client';

export class PasswordService {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Password[]> {
    return this.prisma.password.findMany();
  }

  async findById(id: string): Promise<Password | null> {
    return this.prisma.password.findUnique({ where: { id } });
  }

  async create(data: Omit<Password, 'id' | 'createdAt' | 'updatedAt'>): Promise<Password> {
    return this.prisma.password.create({ data });
  }

  async update(id: string, data: Partial<Password>): Promise<Password> {
    return this.prisma.password.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.password.delete({ where: { id } });
  }
}

export default PasswordService;
