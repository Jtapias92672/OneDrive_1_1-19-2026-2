import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Group 3Controller } from '../controllers/group 3.controller';
import { Group 3Service } from '../services/group 3.service';

export function createGroup 3Routes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Group 3Service(prisma);
  const controller = new Group 3Controller(service);

  router.get('/group 3s', controller.getAll.bind(controller));
  router.get('/group 3s/:id', controller.getById.bind(controller));
  router.post('/group 3s', controller.create.bind(controller));
  router.put('/group 3s/:id', controller.update.bind(controller));
  router.delete('/group 3s/:id', controller.delete.bind(controller));

  return router;
}

export default createGroup 3Routes;
