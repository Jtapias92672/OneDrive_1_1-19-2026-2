import { PrismaClient, Frame 4 } from '@prisma/client';

export class Frame 4Service {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Frame 4[]> {
    return this.prisma.frame 4.findMany();
  }

  async findById(id: string): Promise<Frame 4 | null> {
    return this.prisma.frame 4.findUnique({ where: { id } });
  }

  async create(data: Omit<Frame 4, 'id' | 'createdAt' | 'updatedAt'>): Promise<Frame 4> {
    return this.prisma.frame 4.create({ data });
  }

  async update(id: string, data: Partial<Frame 4>): Promise<Frame 4> {
    return this.prisma.frame 4.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.frame 4.delete({ where: { id } });
  }
}

export default Frame 4Service;
