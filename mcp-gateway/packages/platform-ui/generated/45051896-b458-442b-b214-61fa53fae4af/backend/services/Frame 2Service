import { PrismaClient, Frame 2 } from '@prisma/client';

export class Frame 2Service {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Frame 2[]> {
    return this.prisma.frame 2.findMany();
  }

  async findById(id: string): Promise<Frame 2 | null> {
    return this.prisma.frame 2.findUnique({ where: { id } });
  }

  async create(data: Omit<Frame 2, 'id' | 'createdAt' | 'updatedAt'>): Promise<Frame 2> {
    return this.prisma.frame 2.create({ data });
  }

  async update(id: string, data: Partial<Frame 2>): Promise<Frame 2> {
    return this.prisma.frame 2.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.frame 2.delete({ where: { id } });
  }
}

export default Frame 2Service;
