import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Forgot password?Controller } from '../controllers/forgot password?.controller';
import { Forgot password?Service } from '../services/forgot password?.service';

export function createForgot password?Routes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Forgot password?Service(prisma);
  const controller = new Forgot password?Controller(service);

  router.get('/forgot password?s', controller.getAll.bind(controller));
  router.get('/forgot password?s/:id', controller.getById.bind(controller));
  router.post('/forgot password?s', controller.create.bind(controller));
  router.put('/forgot password?s/:id', controller.update.bind(controller));
  router.delete('/forgot password?s/:id', controller.delete.bind(controller));

  return router;
}

export default createForgot password?Routes;
