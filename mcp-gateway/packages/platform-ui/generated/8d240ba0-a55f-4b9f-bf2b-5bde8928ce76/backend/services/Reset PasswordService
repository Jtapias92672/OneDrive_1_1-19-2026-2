import { PrismaClient, Reset Password } from '@prisma/client';

export class Reset PasswordService {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Reset Password[]> {
    return this.prisma.reset password.findMany();
  }

  async findById(id: string): Promise<Reset Password | null> {
    return this.prisma.reset password.findUnique({ where: { id } });
  }

  async create(data: Omit<Reset Password, 'id' | 'createdAt' | 'updatedAt'>): Promise<Reset Password> {
    return this.prisma.reset password.create({ data });
  }

  async update(id: string, data: Partial<Reset Password>): Promise<Reset Password> {
    return this.prisma.reset password.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.reset password.delete({ where: { id } });
  }
}

export default Reset PasswordService;
