import { PrismaClient, Forgot password? } from '@prisma/client';

export class Forgot password?Service {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Forgot password?[]> {
    return this.prisma.forgot password?.findMany();
  }

  async findById(id: string): Promise<Forgot password? | null> {
    return this.prisma.forgot password?.findUnique({ where: { id } });
  }

  async create(data: Omit<Forgot password?, 'id' | 'createdAt' | 'updatedAt'>): Promise<Forgot password?> {
    return this.prisma.forgot password?.create({ data });
  }

  async update(id: string, data: Partial<Forgot password?>): Promise<Forgot password?> {
    return this.prisma.forgot password?.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.forgot password?.delete({ where: { id } });
  }
}

export default Forgot password?Service;
