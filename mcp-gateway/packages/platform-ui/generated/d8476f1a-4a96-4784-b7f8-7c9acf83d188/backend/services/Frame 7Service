import { PrismaClient, Frame 7 } from '@prisma/client';

export class Frame 7Service {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Frame 7[]> {
    return this.prisma.frame 7.findMany();
  }

  async findById(id: string): Promise<Frame 7 | null> {
    return this.prisma.frame 7.findUnique({ where: { id } });
  }

  async create(data: Omit<Frame 7, 'id' | 'createdAt' | 'updatedAt'>): Promise<Frame 7> {
    return this.prisma.frame 7.create({ data });
  }

  async update(id: string, data: Partial<Frame 7>): Promise<Frame 7> {
    return this.prisma.frame 7.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.frame 7.delete({ where: { id } });
  }
}

export default Frame 7Service;
