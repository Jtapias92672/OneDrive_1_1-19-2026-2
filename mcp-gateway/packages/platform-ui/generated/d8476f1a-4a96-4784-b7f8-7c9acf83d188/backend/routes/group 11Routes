import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Group 11Controller } from '../controllers/group 11.controller';
import { Group 11Service } from '../services/group 11.service';

export function createGroup 11Routes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Group 11Service(prisma);
  const controller = new Group 11Controller(service);

  router.get('/group 11s', controller.getAll.bind(controller));
  router.get('/group 11s/:id', controller.getById.bind(controller));
  router.post('/group 11s', controller.create.bind(controller));
  router.put('/group 11s/:id', controller.update.bind(controller));
  router.delete('/group 11s/:id', controller.delete.bind(controller));

  return router;
}

export default createGroup 11Routes;
