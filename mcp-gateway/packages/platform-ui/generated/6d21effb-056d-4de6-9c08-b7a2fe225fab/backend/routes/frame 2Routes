import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Frame 2Controller } from '../controllers/frame 2.controller';
import { Frame 2Service } from '../services/frame 2.service';

export function createFrame 2Routes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Frame 2Service(prisma);
  const controller = new Frame 2Controller(service);

  router.get('/frame 2s', controller.getAll.bind(controller));
  router.get('/frame 2s/:id', controller.getById.bind(controller));
  router.post('/frame 2s', controller.create.bind(controller));
  router.put('/frame 2s/:id', controller.update.bind(controller));
  router.delete('/frame 2s/:id', controller.delete.bind(controller));

  return router;
}

export default createFrame 2Routes;
