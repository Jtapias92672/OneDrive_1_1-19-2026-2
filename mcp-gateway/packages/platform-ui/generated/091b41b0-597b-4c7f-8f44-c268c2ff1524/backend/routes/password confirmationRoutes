import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Password ConfirmationController } from '../controllers/password confirmation.controller';
import { Password ConfirmationService } from '../services/password confirmation.service';

export function createPassword ConfirmationRoutes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Password ConfirmationService(prisma);
  const controller = new Password ConfirmationController(service);

  router.get('/password confirmations', controller.getAll.bind(controller));
  router.get('/password confirmations/:id', controller.getById.bind(controller));
  router.post('/password confirmations', controller.create.bind(controller));
  router.put('/password confirmations/:id', controller.update.bind(controller));
  router.delete('/password confirmations/:id', controller.delete.bind(controller));

  return router;
}

export default createPassword ConfirmationRoutes;
