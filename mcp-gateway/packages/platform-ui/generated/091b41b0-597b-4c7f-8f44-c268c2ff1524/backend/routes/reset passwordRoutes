import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Reset PasswordController } from '../controllers/reset password.controller';
import { Reset PasswordService } from '../services/reset password.service';

export function createReset PasswordRoutes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Reset PasswordService(prisma);
  const controller = new Reset PasswordController(service);

  router.get('/reset passwords', controller.getAll.bind(controller));
  router.get('/reset passwords/:id', controller.getById.bind(controller));
  router.post('/reset passwords', controller.create.bind(controller));
  router.put('/reset passwords/:id', controller.update.bind(controller));
  router.delete('/reset passwords/:id', controller.delete.bind(controller));

  return router;
}

export default createReset PasswordRoutes;
