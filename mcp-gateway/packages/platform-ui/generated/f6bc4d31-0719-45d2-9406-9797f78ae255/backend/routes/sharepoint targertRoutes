import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { SharePoint TargertController } from '../controllers/sharepoint targert.controller';
import { SharePoint TargertService } from '../services/sharepoint targert.service';

export function createSharePoint TargertRoutes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new SharePoint TargertService(prisma);
  const controller = new SharePoint TargertController(service);

  router.get('/share-point targerts', controller.getAll.bind(controller));
  router.get('/share-point targerts/:id', controller.getById.bind(controller));
  router.post('/share-point targerts', controller.create.bind(controller));
  router.put('/share-point targerts/:id', controller.update.bind(controller));
  router.delete('/share-point targerts/:id', controller.delete.bind(controller));

  return router;
}

export default createSharePoint TargertRoutes;
