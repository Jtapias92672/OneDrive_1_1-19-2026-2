import { Router } from 'express';
import { PrismaClient } from '@prisma/client';
import { Group 13Controller } from '../controllers/group 13.controller';
import { Group 13Service } from '../services/group 13.service';

export function createGroup 13Routes(prisma: PrismaClient): Router {
  const router = Router();
  const service = new Group 13Service(prisma);
  const controller = new Group 13Controller(service);

  router.get('/group 13s', controller.getAll.bind(controller));
  router.get('/group 13s/:id', controller.getById.bind(controller));
  router.post('/group 13s', controller.create.bind(controller));
  router.put('/group 13s/:id', controller.update.bind(controller));
  router.delete('/group 13s/:id', controller.delete.bind(controller));

  return router;
}

export default createGroup 13Routes;
