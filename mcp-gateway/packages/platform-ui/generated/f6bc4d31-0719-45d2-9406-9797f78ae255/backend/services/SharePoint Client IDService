import { PrismaClient, SharePoint Client ID } from '@prisma/client';

export class SharePoint Client IDService {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<SharePoint Client ID[]> {
    return this.prisma.sharepoint client id.findMany();
  }

  async findById(id: string): Promise<SharePoint Client ID | null> {
    return this.prisma.sharepoint client id.findUnique({ where: { id } });
  }

  async create(data: Omit<SharePoint Client ID, 'id' | 'createdAt' | 'updatedAt'>): Promise<SharePoint Client ID> {
    return this.prisma.sharepoint client id.create({ data });
  }

  async update(id: string, data: Partial<SharePoint Client ID>): Promise<SharePoint Client ID> {
    return this.prisma.sharepoint client id.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.sharepoint client id.delete({ where: { id } });
  }
}

export default SharePoint Client IDService;
