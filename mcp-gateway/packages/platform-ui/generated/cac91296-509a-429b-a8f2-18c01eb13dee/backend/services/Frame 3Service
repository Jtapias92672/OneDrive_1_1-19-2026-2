import { PrismaClient, Frame 3 } from '@prisma/client';

export class Frame 3Service {
  constructor(private prisma: PrismaClient) {}

  async findAll(): Promise<Frame 3[]> {
    return this.prisma.frame 3.findMany();
  }

  async findById(id: string): Promise<Frame 3 | null> {
    return this.prisma.frame 3.findUnique({ where: { id } });
  }

  async create(data: Omit<Frame 3, 'id' | 'createdAt' | 'updatedAt'>): Promise<Frame 3> {
    return this.prisma.frame 3.create({ data });
  }

  async update(id: string, data: Partial<Frame 3>): Promise<Frame 3> {
    return this.prisma.frame 3.update({ where: { id }, data });
  }

  async delete(id: string): Promise<void> {
    await this.prisma.frame 3.delete({ where: { id } });
  }
}

export default Frame 3Service;
