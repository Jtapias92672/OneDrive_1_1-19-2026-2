{
  "name": "@forge/platform-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns='e2e|story'",
    "test:story": "jest --testPathPattern='story\\.test\\.ts$'",
    "test:e2e": "jest --testPathPattern='e2e.*\\.test\\.ts$'",
    "test:smoke": "jest --testPathPattern='e2e.*\\.test\\.ts$' --testNamePattern='@smoke'",
    "test:sanity": "jest --testPathPattern='e2e.*\\.test\\.ts$' --testNamePattern='@sanity|@smoke'",
    "test:regression": "jest"
  },
  "dependencies": {
    "next": "14.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.4.0"
  }
}
