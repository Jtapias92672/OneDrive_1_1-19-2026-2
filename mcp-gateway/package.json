{
  "name": "@arcfoundry/mcp-security-gateway",
  "version": "0.1.0",
  "description": "MCP Security Gateway - Zero Trust security for Model Context Protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean",
    "dev": "npm run build && node dist/server.js",
    "start": "node dist/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "mcp",
    "security",
    "gateway",
    "oauth",
    "tenant-isolation",
    "sanitization"
  ],
  "author": "ArcFoundry",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "prom-client": "^15.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3"
  }
}
